<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    tools:context="com.example.christiandegenova.quietnight_1.AboutUsActivity"
    android:background="@color/DarkBlue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AboutUs"
        android:textColor="@color/FadedBlue"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The weekend is a sacred time at Quinnipiac University. With only 11 weekends in the fall semester and 11 in the spring semester, it is imperative that we make each count. For far too long, we have sat by and watched as all of our close friends sit aimlessly around the common room, trying to decide what to do that night or the next morning.This App helps you answer the crucial weekend question.Where am I going tonight?"
        android:id="@+id/descrip"
        android:textSize="15dp"
        android:textColor="@color/Yellow"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/qn_launcher"
        android:gravity="center"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/qn_launcher"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView"
        android:id="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact us for more information at innovation.jova@gmail.com "
        android:id="@+id/contact"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/Yellow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developers:
Janine Jay and
Christian DeGenova"
        android:id="@+id/developers"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/Yellow"
        android:layout_above="@+id/contact"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="125dp"
        android:id="@+id/jj_pic"
        android:src="@mipmap/ic_janine"
        android:layout_below="@+id/descrip"
        android:layout_above="@id/developers"
        android:layout_marginLeft="75dp"
        android:scaleType="fitCenter" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="125dp"
        android:id="@+id/cd_pic"
        android:src="@mipmap/ic_chris"
        android:layout_below="@+id/descrip"
        android:layout_above="@id/developers"
        android:layout_toRightOf="@+id/jj_pic"
        android:scaleType="fitCenter" />

</RelativeLayout>
